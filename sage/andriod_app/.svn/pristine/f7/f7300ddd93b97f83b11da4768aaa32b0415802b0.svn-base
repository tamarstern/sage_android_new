<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:divider="#FFF"
        android:fadeScrollbars="false"
        android:scrollX="0px"
        android:scrollY="0px"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="20dip"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical" >
    </ListView>

    <LinearLayout
        android:id="@+id/menu_bar_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="4" >

        <Button
            android:id="@+id/home_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/house"
            android:text="@string/home"
            android:textColor="#000000"
            android:textSize="10sp" />

        <Button
            android:id="@+id/receipt_box_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/book_open"
            android:text="@string/receipt_box"
            android:textColor="#000000"
            android:textSize="10sp" />

        <Button
            android:id="@+id/new_receipt_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/document_add"
            android:text="@string/new_receipt"
            android:textColor="#000000"
            android:textSize="10sp" />

        <Button
            android:id="@+id/settings_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:drawablePadding="0dp"
            android:drawableTop="@drawable/settings"
            android:text="@string/settings"
            android:textColor="#000000"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>