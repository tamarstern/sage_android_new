<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comments_likes_panel_profile_page"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/text_border"
    android:orientation="horizontal"
    android:weightSum="4" >

    <TextView
        android:id="@+id/likes_number_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/add_link_description"
        android:textColor="#355723"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/likes_icon_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/description"
        android:scaleType="fitXY"
        android:src="@drawable/full_heart" />

    <TextView
        android:id="@+id/comments_number_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/add_link_description"
        android:textColor="#355723"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/comments_icon_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/description"
        android:scaleType="fitXY"
        android:src="@drawable/full_heart" />

</LinearLayout>