<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_bar_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="3" >

    <ImageView
        android:id="@+id/receipt_rating"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/description"
        android:padding="9dp"
        android:paddingBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/stars0" />

    <Button
        android:id="@+id/save_recipe"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/application_button_style"
        android:text="@string/save_recipe"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/publish_recipe"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/application_button_style"
        android:text="@string/publish_recipe"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />
    
      <Button
        android:id="@+id/unpublish_recipe"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/application_button_style"
        android:text="@string/unpublish_recipe"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

</LinearLayout>