<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfirstapp"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="androia.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.sage.application.GoogleAnalyticsApplication"
        android:allowBackup="true"
        android:icon="@drawable/sage"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />

        <activity
            android:name="com.example.myfirstapp.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.example.myfirstapp.TextReciptPageActivity"
            android:label="@string/title_activity_personal_page"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.NewsfeedActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.NewRecipeActivity"
            android:label="@string/title_activity_new_receipe" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.SearchLinkResultsActivity"
            android:label="@string/title_activity_search_link"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.example.myfirstapp.ProfilePageActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_profile_page" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.PictureRecipePageActivity"
            android:label="@string/title_activity_picture_recipe_page"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.RegisterNewUserActivity"
            android:label="@string/title_activity_register_new_user"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.LinkRecipePageActivity"
            android:label="@string/title_activity_link_recipe_page"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.ActivityCategoriesPage"
            android:label="@string/title_activity_activity_categories_page" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.ActivityRecipiesInCategoryPage"
            android:label="@string/title_activity_activity_sub_category_page" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.AddRecipeAsLinkActivity"
            android:label="@string/title_activity_add_recipe_as_link" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.DisplayLinkWebPageActivity"
            android:label="@string/title_activity_display_link_web_page" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.SearchActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_search"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.SearchMyRecipesActivity"
            android:label="@string/title_activity_search_my_recipes"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.DisplayFollowingActivity"
            android:label="@string/title_activity_display_who_ifollow"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.SearchUserActivity"
            android:label="@string/title_activity_search_user"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.ChangeUserDisplayNameActivity"
            android:label="@string/title_activity_change_user_display_name"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.myfirstapp.SearchMyFollowActivity"
            android:label="@string/title_activity_search_my_follow"
            android:windowSoftInputMode="adjustPan" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>